{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "tslib" : ["node_modules\tslib\tslib.d.ts"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["src"]
}
